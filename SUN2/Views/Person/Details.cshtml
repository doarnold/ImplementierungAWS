@model SUN2.Models.Person
@Styles.Render("~/Content/css")
@{
    ViewBag.Title = "Details";
}
@if (Request.IsAuthenticated)
{


<div id="card">
    <div id="details">


        <div id="name" style="font-weight: bold">


            @Html.DisplayFor(model => model.vorname)

            @Html.DisplayFor(model => model.name)

        </div>
        <hr />

        <div id="matr">
            <text> Martrikelnummer: </text>
            @Html.DisplayFor(model => model.matnr)
            <br />
            <text>Hochschulsemester:</text>
            @Html.DisplayFor(model => model.hsemester)
            <br />
            <text>Fachsemester:</text>
            @Html.DisplayFor(model => model.fsemester)
            <br />
            <text>Studiengang:</text>
            @Html.DisplayFor(model => model.studiengang)
            <br />
            <text>Studienfach:</text>
            @Html.DisplayFor(model => model.studienfach)
            <br />
            <text>E-Mail:</text>
            @Html.DisplayFor(model => model.AspNetUsers.Email)
        </div>
    </div>



    <div id="avatar">
        <img src="data:image/jpeg;base64," />
    </div>

        <br />
        <input id="button" type="button" value="Zurück" onclick="window.history.back()" />
   

</div>




}
else
{
    Response.Redirect("/Error/NotLoggedIn");
}
