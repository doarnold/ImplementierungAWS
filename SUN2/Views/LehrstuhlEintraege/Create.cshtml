@model SUN2.Models.LehrstuhlEintraege

<link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>

@{
    ViewBag.Title = "Eintrag für Lehrstuhl";
}
@if (Request.IsAuthenticated)
{
    <h2>Eintrag für Lehrstuhl erstellen</h2>

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.autor)
        @Html.HiddenFor(model => model.datum)
        @Html.HiddenFor(model => model.lehrstuhlid)

        <div class="form-horizontal">
            <h4>Bitte die Felder ausfüllen.</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">

                <div class="col">
                    @Html.EditorFor(model => model.inhalt, new { htmlAttributes = new { @class = "form-control", id = "TextboxInhalt", placeholder = "Geben Sie hier den Inhalt ein." } })
                    @Html.ValidationMessageFor(model => model.inhalt, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-2">
                    @Html.EditorFor(model => model.label1, new { htmlAttributes = new { @class = "form-control", placeholder = "Label 1" } })
                    @Html.ValidationMessageFor(model => model.label1, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.label2, new { htmlAttributes = new { @class = "form-control", placeholder = "Label 2" } })
                    @Html.ValidationMessageFor(model => model.label2, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.label3, new { htmlAttributes = new { @class = "form-control", placeholder = "Label 3" } })
                    @Html.ValidationMessageFor(model => model.label3, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.label4, new { htmlAttributes = new { @class = "form-control", placeholder = "Label 4" } })
                    @Html.ValidationMessageFor(model => model.label4, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.label5, new { htmlAttributes = new { @class = "form-control", placeholder = "Label 5" } })
                    @Html.ValidationMessageFor(model => model.label5, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Speichern" class="btn btn-default" />
                </div>
                <div class="col-md-2">
                    @Html.ActionLink("Zurück", "Index", "LehrstuhlEintraege", new { lehrstuhlid = Model.lehrstuhlid }, null)
                </div>
            </div>
        </div>
    }
}
else
{
}
else
{
    Response.Redirect("/Error/NotLoggedIn");
}
}
