@model SUN2.Models.GruppenEintraege

@{
    ViewBag.Title = "Delete";
}

@if (Request.IsAuthenticated)
{<br /><br />
    <h3>Möchten Sie wirklich diesen Eintrag löschen?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.inhalt)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.inhalt)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Löschen" class="btn btn-primary" /> |
                <input type="button" value="Zurück" class="btn btn-primary" onclick="window.history.back()" class="btn btn-primary" />
                @Html.ActionLink("Alle Einträge", "Index", "GruppenEintraege", new { gruppenid = Model.gruppenid }, new {@class = "btn btn-primary"})
            </div>
        }
    </div>

}
else
{
    Response.Redirect("/Error/NotLoggedIn");
}
