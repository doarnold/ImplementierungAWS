@model SUN2.Models.Gruppe
@Styles.Render("~/Content/css")
@{
    ViewBag.Title = "Gruppe löschen";
}


@if (Request.IsAuthenticated)
{

    <div id="delteDialog">

        <h2>Löschen</h2>
        <hr />

        <h3>Möchten Sie die Gruppe " @Html.DisplayFor(model => model.bezeichnung) " wirklich löschen?</h3>
       
            <dl class="dl-horizontal"></dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Gruppe löschen" class="btn btn-primary" />
                    @Html.ActionLink("Zurück", "Index", null, new { @class = "btn btn-primary" })
                </div>
            }
       
    </div>
}
else
{
Response.Redirect("/Error/NotLoggedIn");
}
