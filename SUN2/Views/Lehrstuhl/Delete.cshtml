@model SUN2.Models.Lehrstuhl
@Styles.Render("~/Content/css")
@{
    ViewBag.Title = "Delete";
}

@if (Request.IsAuthenticated)
{
   
    <div id="delteDialog">
    


        <h2>Löschen</h2>
        <hr />
  
        <h3>Möchten Sie wirklich den Lehrstuhl "@Html.DisplayFor(model => model.bezeichnung)" löschen?</h3>

        <dl class="dl-horizontal"></dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()



            <div class="form-actions no-color" style="text-align: center">
                <input type="submit" value="Löschen" class="btn btn-primary" /> |

                @Html.ActionLink("Abbrechen", "Index",null,  new {@class = "btn btn-primary"})
            </div>
        }
    </div>


  


}
else
{
    Response.Redirect("/Error/NotLoggedIn");
}
